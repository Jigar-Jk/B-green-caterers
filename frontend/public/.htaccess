## Ensure index.html is prioritized over any default PHP index
DirectoryIndex index.html index.htm index.php default.php

## Force HTTPS (optional) - uncomment if you have SSL configured
# <IfModule mod_rewrite.c>
#   RewriteEngine On
#   RewriteCond %{HTTPS} !=on
#   RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
# </IfModule>

## SPA routing: serve index.html for all non-file requests
## Place this file in the `public/` folder so Vite copies it into `dist/` on build.

Options -MultiViews
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Exclude /api/ directory from SPA routing - let PHP files be served directly
  RewriteCond %{REQUEST_URI} ^/api/
  RewriteRule ^ - [L]

  # If the request matches an existing file or directory, serve it directly
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Otherwise, rewrite to index.html (preserve query string)
  RewriteRule ^ index.html [L,QSA]
</IfModule>

## Caching for static assets (adjust as needed)
<IfModule mod_headers.c>
  <FilesMatch "\.(js|css|png|jpg|jpeg|svg|gif|webp)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
  <FilesMatch "\.(html)$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
  </FilesMatch>
</IfModule>
